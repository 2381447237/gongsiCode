<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical" >

    <!--
        <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_on"
        android:gravity="center"
        android:text="提示"
        android:textColor="#ffffff"
        android:textSize="24sp" />
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="169dp"
        android:background="@drawable/bai"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dialog"
            android:layout_width="wrap_content"
            android:layout_height="119dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            android:textSize="26sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/chang" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_undo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/change_dialog3"
                android:text="取消"
                android:textColor="#0099cc"
                android:textSize="24sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.01"
                android:src="@drawable/duan" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/change_dialog2"
                android:text="确定"
                android:textColor="#0099cc"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>