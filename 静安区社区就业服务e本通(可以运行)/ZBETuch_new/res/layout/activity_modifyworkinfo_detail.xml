<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dip"
    android:layout_height="match_parent"
    android:background="@drawable/modifyworkinfodetail01"
    android:orientation="vertical" >

    <LinearLayout style="@style/modifyworkinfodetail_main_line" >

        <TextView
            style="@style/modifyworkinfodetail_main_title"
            android:text="工作单位:" />

        <EditText
            android:id="@+id/txtDwName"
            style="@style/modifyworkinfodetail_main_text" />
    </LinearLayout>

    <LinearLayout
        style="@style/modifyworkinfodetail_main_line"
        android:background="@drawable/modifyworkinfodetail02" >

        <TextView
            style="@style/modifyworkinfodetail_main_title"
            android:text="单位性质:" />

        <EditText
            android:id="@+id/txtDwType"
            style="@style/modifyworkinfodetail_main_text" />
    </LinearLayout>

    <LinearLayout style="@style/modifyworkinfodetail_main_line" >

        <TextView
            style="@style/modifyworkinfodetail_main_title"
            android:text="行业:" />

        <EditText
            android:id="@+id/txtTrade"
            style="@style/modifyworkinfodetail_main_text" />
    </LinearLayout>

    <LinearLayout
        style="@style/modifyworkinfodetail_main_line"
        android:background="@drawable/modifyworkinfodetail02" >

        <TextView
            style="@style/modifyworkinfodetail_main_title"
            android:text="部门:" />

        <EditText
            android:id="@+id/txtDetp"
            style="@style/modifyworkinfodetail_main_text" />
    </LinearLayout>

    <LinearLayout style="@style/modifyworkinfodetail_main_line" >

        <TextView
            style="@style/modifyworkinfodetail_main_title"
            android:text="职位：" />

        <EditText
            android:id="@+id/txtPosition"
            style="@style/modifyworkinfodetail_main_text" />
    </LinearLayout>

    <LinearLayout
        style="@style/modifyworkinfodetail_main_line"
        android:background="@drawable/modifyworkinfodetail02" >

        <TextView
            style="@style/modifyworkinfodetail_main_title"
            android:text="开始时间:" />

        <EditText
            android:id="@+id/txtStartDate"
            style="@style/modifyworkinfodetail_main_text" 
            android:inputType="date"
            />
    </LinearLayout>

    <LinearLayout style="@style/modifyworkinfodetail_main_line" >

        <TextView
            style="@style/modifyworkinfodetail_main_title"
            android:text="结束时间：" />

        <EditText
            android:id="@+id/txtEndDate"
            style="@style/modifyworkinfodetail_main_text" 
            android:inputType="date"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/modifyworkinfodetail02"
        android:gravity="center" >

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dip"
            android:background="@drawable/btnmodify"
            android:text="确定"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dip"
            android:background="@drawable/btnmodify"
            android:text="取消"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>