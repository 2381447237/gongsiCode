<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jiugonggeditu"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dip" 
        android:orientation="horizontal"
        >
    <TextView 
        android:layout_height="40dip"
        android:layout_width="0dip"
        android:layout_weight="7"
        android:text=" "
        />
        
        <Button
            android:id="@+id/btn_tongji"
            android:layout_width="70dip"
            android:layout_weight="1"
            android:layout_height="50dip"
            android:textSize="20sp"
            android:layout_marginRight="30dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yellow_btn"
            android:text="招聘会统计" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgt"
        android:orientation="horizontal"
        >
        <TextView
        android:id="@+id/list_no"
        style="@style/gradeate_list_itemtext"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="编号" />

    <TextView
        android:id="@+id/list_code"
        style="@style/gradeate_list_itemtext"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1.2"
        android:layout_gravity="center"
        android:text="岗位编号" />

    <TextView
        android:id="@+id/list_smart_id"
        style="@style/gradeate_list_itemtext"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1.2"
        android:layout_gravity="center"
        android:text="招聘会编号" />

    <TextView
        android:id="@+id/list_idcard"
        style="@style/gradeate_list_itemtext"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="身份证" />

    <TextView
        android:id="@+id/list_create_time"
        style="@style/gradeate_list_itemtext"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="创建时间" />
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/blue"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff" >

        <com.fc.main.beans.PullDownView
            android:id="@+id/recuritment_list_pulldown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.fc.main.beans.PullDownView>
    </LinearLayout>

</LinearLayout>