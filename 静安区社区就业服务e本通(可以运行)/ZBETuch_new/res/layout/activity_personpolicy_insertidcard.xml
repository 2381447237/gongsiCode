<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jiugonggeditu"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <LinearLayout
            android:layout_width="900dip"
            android:layout_height="200dip"
            android:background="@drawable/bk1"
            android:layout_marginTop="130dip"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="889dip"
                android:layout_height="50dip"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/lt" >

                <ImageView
                    android:layout_width="90dip"
                    android:layout_height="40dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dip"
                    android:background="@drawable/cx" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dip"
                    android:text="身份证："
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtIdCard"
                    android:layout_width="400dip"
                    android:layout_height="40.0dip"
                    android:layout_marginLeft="40dip"
                    android:background="@drawable/login_textbg"
                    android:ems="9"
                    android:gravity="center_vertical"
                    android:paddingBottom="1.0dip"
                    android:paddingLeft="10dp"
                    android:paddingRight="1.0dip"
                    android:paddingTop="1.0dip"
                    android:textSize="17.0sp" >
                </EditText>

                <Button
                    android:id="@+id/btnScan"
                    android:layout_width="70dip"
                    android:layout_height="40dip"
                    android:layout_marginLeft="70dip"
                    android:background="@drawable/yellow_btn"
                    android:text="扫描" />

                <Button
                    android:id="@+id/btnQueryById" 
                    android:layout_width="70dip"
                    android:layout_height="40dip"
                    android:layout_marginLeft="40dip"
                    android:background="@drawable/button_selector"
                    android:text="查询" />
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dip"
                    android:text="关键字："
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtCode"
                    android:layout_width="400dip"
                    android:layout_height="40.0dip"
                    android:layout_marginLeft="40dip"
                    android:background="@drawable/login_textbg"
                    android:ems="9"
                    android:gravity="center_vertical"
                    android:paddingBottom="1.0dip"
                    android:paddingLeft="10dp"
                    android:paddingRight="1.0dip"
                    android:paddingTop="1.0dip"
                    android:textSize="17.0sp" >
                </EditText>

                
            </LinearLayout>
        </LinearLayout>
    

</LinearLayout>