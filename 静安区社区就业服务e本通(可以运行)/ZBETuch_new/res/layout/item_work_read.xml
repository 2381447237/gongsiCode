<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_meeting_num"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="编号"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_meeting_allnum"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="工作通知总记录数"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_meeting_readnum"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="工作通知已读记录数"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_meeting_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="工作通知时间"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_meeting_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="20dip"
        android:gravity="center_horizontal"
        android:text="工作通知读取率"
        android:textSize="22sp" />

</LinearLayout>