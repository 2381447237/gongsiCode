<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jiugonggeditu"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="70dip"
        android:background="@drawable/lt"
        android:gravity="center"
        android:text="工 作 查 看"
        android:textColor="@color/white"
        android:textSize="22dip" />

      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_query_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dip"
            android:ems="30"
            android:singleLine="true"
            android:textSize="20sp" >
        </EditText>

        <Button
            android:id="@+id/btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:background="@drawable/button_selector"
            android:text="选择"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_query"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="25dip"
            android:background="@drawable/button_selector"
            android:text="查询"
            android:textSize="20sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/gv_workquery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="210dp"
        android:layout_marginTop="5dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:paddingLeft="@dimen/activity_horizontal_9grid"
        android:paddingRight="@dimen/activity_horizontal_9grid"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" >
    </GridView>

</LinearLayout>