<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <LinearLayout style="@style/gradeate_personinfo_lline"
               >

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="身份证：" />

                    <EditText
                        android:id="@+id/txtIdCard"
                        style="@style/gradeate_personinfo_text"
                        
                        
                       />
                </LinearLayout>

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="姓名：" />

                    <EditText
                        android:id="@+id/txtName"
                        style="@style/gradeate_personinfo_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="性别：" />

                    <Spinner
                        android:id="@+id/cboSex"
                        style="@style/gradeate_personinfo_spinner" />
                </LinearLayout>

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="民族：" />

                    <Spinner
                        android:id="@+id/cboNation"
                        style="@style/gradeate_personinfo_spinner" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="政治面貌：" />

                    <Spinner
                        android:id="@+id/cboPolityStyle"
                        style="@style/gradeate_personinfo_spinner" />
                </LinearLayout>

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="文化程度：" />

                    <Spinner
                        android:id="@+id/cboEducationLevel"
                        style="@style/gradeate_personinfo_spinner" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="就读学校：" />

                    <EditText
                        android:id="@+id/txtSchool"
                        style="@style/gradeate_personinfo_text" />
                </LinearLayout>

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="所学专业：" />

                    <EditText
                        android:id="@+id/txtSpeciality"
                        style="@style/gradeate_personinfo_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <TextView
                    style="@style/gradeate_personinfo_label"
                    android:text="户籍地址：" />
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="街道：" />

                    <Spinner
                        android:id="@+id/cboStreet"
                        style="@style/gradeate_personinfo_spinner" 
                        />
                </LinearLayout>

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="居委：" />

                    <Spinner
                        android:id="@+id/cboJuWei"
                        style="@style/gradeate_personinfo_spinner" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <TextView
                    style="@style/gradeate_personinfo_label"
                    android:text="详细地址：" />

                <EditText
                    android:id="@+id/txtAddressDetail"
                    style="@style/gradeate_personinfo_text" />
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <TextView
                    style="@style/gradeate_personinfo_label"
                    android:text="居住地址：" />

                <EditText
                    android:id="@+id/txtLiveAddress"
                    style="@style/gradeate_personinfo_text" />
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="联系电话1：" />

                    <EditText
                        android:id="@+id/txtPhone"
                        style="@style/gradeate_personinfo_text"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout style="@style/gradeate_personinfo_lsub" >

                    <TextView
                        style="@style/gradeate_personinfo_label"
                        android:text="联系电话2：" />

                    <EditText
                        android:id="@+id/txtPhone2"
                        style="@style/gradeate_personinfo_text"
                        android:inputType="phone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/gradeate_personinfo_lline" >

                <TextView
                    style="@style/gradeate_personinfo_label"
                    android:text="特殊情况：" />

                <LinearLayout
                    android:id="@+id/llEspecial"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:layout_marginRight="20dip"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/cboDiBao"
                        style="@style/gradeate_personinfo_checkbox"
                        android:tag="低保家庭成员"
                        android:text="低保家庭成员" />

                    <CheckBox
                        android:id="@+id/cboLinJiuye"
                        style="@style/gradeate_personinfo_checkbox"
                        android:tag="零就业家庭成员"
                        android:text="零就业家庭成员" />

                    <CheckBox
                        android:id="@+id/cboCanJi"
                        style="@style/gradeate_personinfo_checkbox"
                        android:tag="残疾"
                        android:text="残疾" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/gradeate_personinfo_lline"
                android:gravity="right"
                android:paddingBottom="20dip" >

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="70dip"
                    android:layout_height="40dip"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="20dip"
                    android:background="@drawable/button_selector"
                    android:text="保存" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>