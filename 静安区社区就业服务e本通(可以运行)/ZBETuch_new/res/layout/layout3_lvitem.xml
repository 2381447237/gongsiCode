        </LinearLayout>

        <LinearLayout
            style="@style/style_fw"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_layout3_text"
                android:text="2013-5-29" />
        </LinearLayout>

        <LinearLayout
            style="@style/style_fw"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_layout3_text"
                android:text="计算机" />
