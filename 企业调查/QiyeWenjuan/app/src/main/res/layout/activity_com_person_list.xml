<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/lt"
        >
        <Button
            android:text="调 查"
            android:id="@+id/btn_com_person_list_naire"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="#fff"
            android:textSize="17sp"
            android:background="@drawable/button_selector"/>

    <TextView
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:text="企 业 人 员 列 表"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_com_person_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:textSize="17sp"/>

    </RelativeLayout>

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/title2"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            style="@style/gradeate_list_titletext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编号"
            />

        <TextView
            style="@style/gradeate_list_titletext"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="姓名" />

        <TextView
            style="@style/gradeate_list_titletext"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="身份证" />

        <TextView
            style="@style/gradeate_list_titletext"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="备注" />


    </LinearLayout>
    <ListView
    android:id="@+id/lv_com_person_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></ListView>
</LinearLayout>