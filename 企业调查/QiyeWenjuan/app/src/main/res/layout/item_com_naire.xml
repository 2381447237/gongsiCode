<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:id="@+id/ll_item_com_naire">

    <TextView
        android:id="@+id/tv_item_com_naire_no"
        style="@style/gradeate_list_titletext"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/tv_item_com_naire_title"
        style="@style/gradeate_list_titletext"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_item_com_naire_naire_no"
        style="@style/gradeate_list_titletext"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_item_com_naire_date"
        style="@style/gradeate_list_titletext"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center"
        />

</LinearLayout>