<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false"><shape android:shape="rectangle">

            <!-- 渐变 -->
            <solid android:color="#FFFFFF" />

            <gradient android:angle="270" android:centerColor="@color/logincolor" android:endColor="@color/spinner_color" android:gradientRadius="10" android:startColor="@color/beijing_color" android:type="linear" />
            <!-- 描边 -->
            <stroke android:width="2dp" android:color="@color/logincolor" />
            <!-- 圆角 -->
            <corners android:radius="15dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="@color/beijing_color" android:endColor="@color/logincolor" android:gradientRadius="10" android:startColor="@color/spinner_color" android:type="linear" />

            <stroke android:width="2dp" android:color="@color/beijing_color" />

            <corners android:radius="15dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
