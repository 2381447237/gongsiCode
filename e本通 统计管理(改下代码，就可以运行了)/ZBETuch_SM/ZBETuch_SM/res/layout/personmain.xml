<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/firstpage_titlebackgroud1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_cehua"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/but_cehua" />

        <Button
            android:id="@+id/button_shouye"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/but_shouye" />

        <Button
            android:id="@+id/button_zhuye"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/but_zhuye" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/llxinxi"
            android:layout_width="233dp"
            android:layout_height="fill_parent"
            android:background="@drawable/cehuabj"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/mainbk"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="221dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.97"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgvw_ownphoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/personhead" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/mainshang"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="姓　　名:"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_personname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/mainzhong"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="性　　别:"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_personsex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/mainzhong" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="状　　态:"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tv_zt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/mainzhong" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text="证件号码:"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/mainxia" >

                        <TextView
                            android:id="@+id/tv_sfz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button_personModify"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:background="@drawable/btn_modify"
                    android:gravity="center"
                    android:text="修　改"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llcontent"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:id="@+id/mHorizontalScrollView"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/mainshuipingbj"
                android:fadingEdge="none"
                android:scrollbars="@null" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="49dp" >

                    <RadioGroup
                        android:id="@+id/mRadioGroup"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/mRadioButton1"
                            android:layout_width="150dp"
                            android:layout_height="fill_parent"
                            android:background="@drawable/radiobtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="基本信息"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />

                        <RadioButton
                            android:id="@+id/mRadioButton2"
                            android:layout_width="150dp"
                            android:layout_height="fill_parent"
                            android:background="@drawable/radiobtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="家庭信息"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />

                        <RadioButton
                            android:id="@+id/mRadioButton3"
                            android:layout_width="150dp"
                            android:layout_height="fill_parent"
                            android:background="@drawable/radiobtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="个人简历"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />
                        
                        <RadioButton
                            android:id="@+id/mRadioButton4"
                            android:layout_width="150dp"
                            android:layout_height="fill_parent"
                            android:background="@drawable/radiobtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="服务记录"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />

                        <RadioButton
                            android:id="@+id/mRadioButton5"
                            android:layout_width="150dp"
                            android:layout_height="fill_parent"
                            android:background="@drawable/radiobtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="教育信息"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />

                        <RadioButton
                            android:id="@+id/mRadioButton6"
                            android:layout_width="150dp"
                            android:layout_height="fill_parent"
                            android:background="@drawable/radiobtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="就业信息"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />
                         <RadioButton
                            android:id="@+id/mRadioButton7"
                            android:layout_width="150dp"
                            android:layout_height="fill_parent"
                            android:background="@drawable/radiobtn_selector"
                            android:button="@null"
                            android:gravity="center"
                            android:text="e记录"
                            android:textColor="@android:color/black"
                            android:textSize="22sp" />
                        
                        
                    </RadioGroup>

                    <ImageView
                        android:id="@+id/mImageView"
                        android:layout_width="150dp"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:background="#FFA500" />
                </RelativeLayout>
            </HorizontalScrollView>

            <android.support.v4.view.ViewPager
                android:id="@+id/mViewPager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/mainbasebj" 
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>