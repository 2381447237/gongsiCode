<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/lblComName"
        style="@style/item_invite_job_title"
        android:paddingLeft="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="单位名称" />

    <TextView
        android:id="@+id/lblJobName"
        style="@style/item_invite_job_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="岗位名称" />

   
    <TextView
        android:id="@+id/lblJobNo"
        style="@style/item_invite_job_title"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:singleLine="true"
        android:text="岗位编码" />
    <TextView
        android:id="@+id/lblEduName"
        style="@style/item_invite_job_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:text="学 历" />

    <TextView
        android:id="@+id/lblAge"
        android:gravity="center"
        style="@style/item_invite_job_title"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:text="年 龄" />

    <TextView
        android:id="@+id/lblRecruitNums"
        android:gravity="center"
        style="@style/item_invite_job_title"
        android:layout_width="0dp"
        android:layout_weight="0.6"
        android:text="招聘人数" />

    <TextView
        android:id="@+id/lblSalary"
        style="@style/item_invite_job_title"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:text="月 薪" />

    <TextView
        android:id="@+id/lblModifyDate"
        style="@style/item_invite_job_title"
        android:gravity="right"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:text="更新时间" />

</LinearLayout>