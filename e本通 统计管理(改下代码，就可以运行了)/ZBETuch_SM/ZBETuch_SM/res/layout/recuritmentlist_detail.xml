<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dip"
                android:background="@drawable/gridebg"
                android:orientation="vertical" >

                <RelativeLayout 
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/title2" >

                    <TextView
                        android:id="@+id/recuritment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XX招聘会"
                        android:textSize="20sp" 
                        android:layout_centerInParent="true"/>
                    <Button 
                        android:id="@+id/btnCheckJobFair"
                        android:layout_width="70dip"
                        android:layout_height="40dip"
                        android:text="未读"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/mybutton"
                        android:onClick="btnCheckJobFair_OnClick"
                        />
                </RelativeLayout>
<!-- 
                <LinearLayout style="@style/gradeate_item_workmark_line" />
 -->
                <LinearLayout style="@style/gradeate_item_recuritment_mainline"
                    android:background="@drawable/bule" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="80dip"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="时间："
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/recuritment_time"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text=" "
                            android:textSize="20sp" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="120dip"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="单位数量："
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/companyNum"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text=" "
                            android:textSize="20sp" />
                    </LinearLayout>
                     <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:layout_width="120dip"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="10dip"
                            android:text="岗位数量："
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/jobNum"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text=" "
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/gradeate_item_recuritment_mainline"
                    android:background="@drawable/bule" >

                    <TextView
                        android:layout_width="80dip"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="10dip"
                        android:text="地址："
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/recuritment_adress"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:text=" "
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="10dip"
            android:layout_weight="6"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/title2"
                android:orientation="horizontal" >

                <TextView
                    style="@style/activity_invite_job_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="单位名称" />

                <TextView
                    style="@style/activity_invite_job_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="岗位名称" />

                <TextView
                    style="@style/activity_invite_job_title"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:text="岗位编码" />

                <TextView
                    style="@style/activity_invite_job_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="学 历" />

                <TextView
                    style="@style/activity_invite_job_title"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:text="年 龄" />

                <TextView
                    style="@style/activity_invite_job_title"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:text="招聘人数" />

                <TextView
                    style="@style/activity_invite_job_title"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="月 薪" />

                <TextView
                    style="@style/activity_invite_job_title"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:text="更新时间" />
            </LinearLayout>

            <com.fc.main.beans.PullDownView2
                android:id="@+id/recuritment_pulldown"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/listitem_selector" >
            </com.fc.main.beans.PullDownView2>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>