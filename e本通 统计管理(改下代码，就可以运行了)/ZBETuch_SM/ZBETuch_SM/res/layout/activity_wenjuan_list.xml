<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invitedetailback"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dip"
            android:gravity="center"
            android:text="问卷调查"
            android:textColor="@color/white"
            android:textSize="23dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="950dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="930dip"
            android:layout_height="438dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/invitedetailcontentback"
                android:fadeScrollbars="false"
                android:alwaysDrawnWithCache="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/llDuty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dip"
                        android:cacheColorHint="@android:color/transparent"
                        android:orientation="vertical"
                        android:theme="@android:style/Theme.Translucent" >
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_star_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wenjuanbtn"
                android:padding="8dip"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="200dip"
                android:visibility="gone"
                android:text="开始答题 "
                android:textSize="18dip" />

            <Button
                android:id="@+id/btn_up_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wenjuanbtn"
                android:padding="8dip"
                android:visibility="gone"
                android:layout_marginLeft="200dip"
                android:text="上一题 "
                android:textSize="18dip" />

            <Button
                android:id="@+id/btn_up_wenjuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/wenjuanbtn"
                android:padding="8dip"
                android:layout_marginLeft="200dip"
                android:visibility="gone"
                android:text="提交"
                android:textSize="18dip" />

            <Button
                android:id="@+id/btn_next_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wenjuanbtn"
                android:padding="8dip"
                android:visibility="gone"
                android:layout_marginLeft="80dip"
                android:text="下一题 "
                android:textSize="18dip" />

            <Button
                android:id="@+id/btn_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wenjuanbtn"
                android:padding="8dip"
                android:layout_marginLeft="80dip"
                android:visibility="gone"
                android:text="查看全部 "
                android:textSize="18dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>