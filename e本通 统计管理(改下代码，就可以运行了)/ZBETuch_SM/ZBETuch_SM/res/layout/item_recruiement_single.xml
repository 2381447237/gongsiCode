<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dip"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gridebg"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/gradeate_item_recuritment_mainline"
            android:background="@drawable/title2" >

            <TextView
                android:id="@+id/recuritment_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="XX招聘会"
                android:textSize="20sp" />
        </LinearLayout>
<!--         <LinearLayout style="@style/gradeate_item_workmark_line" /> -->

        <LinearLayout
            style="@style/gradeate_item_recuritment_mainline"
            android:background="@drawable/bule" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="80dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dip"
                    android:text="时间："
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/recuritment_time"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text=" "
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dip"
                    android:text="单位数量："
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/company_Num"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text=" "
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="120dip"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dip"
                    android:text="岗位数量："
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/job_Num"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text=" "
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/gradeate_item_recuritment_mainline"
            android:background="@drawable/bule" >

            <TextView
                android:layout_width="80dip"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="地址："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/recuritment_adress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text=" "
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>