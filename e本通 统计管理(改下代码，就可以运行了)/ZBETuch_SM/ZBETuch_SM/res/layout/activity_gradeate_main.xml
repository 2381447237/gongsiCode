<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jiugonggeditu"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rgpMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dip"
        android:background="@drawable/pendsecondback"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rdbPersonInfo"
            style="@style/gradeate_main_tab"
            android:text="个人基本信息" />

        <RadioButton
            android:id="@+id/rdbApiration"
            style="@style/gradeate_main_tab"
            android:text="个人求职意愿" />

        <RadioButton
            android:id="@+id/rdbWorkTrack"
            style="@style/gradeate_main_tab"
            android:text="就业工作轨迹" />
    </RadioGroup>

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>