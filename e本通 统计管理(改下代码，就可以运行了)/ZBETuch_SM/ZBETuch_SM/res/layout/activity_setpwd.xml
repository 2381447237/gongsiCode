<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jiugonggeditu"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dip"
        android:layout_marginLeft="200dip"
        android:layout_marginRight="200dip"
        android:orientation="vertical"
        android:background="@drawable/change">
        <LinearLayout 
            android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/lt"
            >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/xiugaimima" />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="20dip">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入原密码："
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dip"/>
            <EditText 
                android:id="@+id/txtOldPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:inputType="textFilter"
                android:layout_marginRight="15dip"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dip">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请输入新密码："
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                 android:layout_marginLeft="15dip"/>
            <EditText 
                android:id="@+id/txtNewPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:inputType="textFilter"
                android:layout_marginRight="15dip"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dip">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请确认新密码："
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                 android:layout_marginLeft="15dip"/>
            <EditText 
                android:id="@+id/txtReNewPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="20"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:inputType="textFilter"
                android:layout_marginRight="15dip"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:gravity="center">
            <Button 
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:background="@drawable/button_selector"
                android:text="确认"/>
            <Button 
                android:id="@+id/btnCancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:background="@drawable/button_selector"
                 android:layout_marginLeft="50dip"
                android:text="取消"/>
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>