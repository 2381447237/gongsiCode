<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jiugonggeditu"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dip"
        android:paddingTop="8dip" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:text="报表发布系统"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout style="@style/activity_invite_detail_line" >

                    <TextView
                        android:id="@+id/tv_reportsjr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="收件人：    "
                        android:textColor="@android:color/white"
                        android:textSize="20sp" >
                    </TextView>

                    <EditText
                        android:id="@+id/report_sjr"
                        android:layout_width="650dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:textSize="25sp" >
                    </EditText>

                    <Button
                        android:id="@+id/reportsjr_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/button_selector"
                        android:text="选择"
                        android:textSize="18sp" >
                    </Button>
                </LinearLayout>

                <LinearLayout style="@style/activity_invite_detail_line" >

                    <TextView
                        android:id="@+id/tv_reportname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="报表名称："
                        android:textColor="@android:color/white"
                        android:textSize="20sp" >
                    </TextView>

                    <EditText
                        android:id="@+id/report_name"
                        android:layout_width="650dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:textSize="25sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout style="@style/activity_invite_detail_line" >

                    <TextView
                        android:id="@+id/tv_reporttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="报表时间："
                        android:textColor="@android:color/white"
                        android:textSize="20sp" >
                    </TextView>

                    <Spinner
                        android:id="@+id/report_time_year"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:inputType="time"
                        android:textSize="20sp" >
                    </Spinner>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="年"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" >
                    </TextView>

                    <Spinner
                        android:id="@+id/report_time_month"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:inputType="time"
                        android:textSize="20sp" >
                    </Spinner>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="月"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" >
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="报表类型："
                        android:textColor="@android:color/white"
                        android:textSize="20sp" >
                    </TextView>

                    <Spinner
                        android:id="@+id/report_time_type"
                        android:layout_width="270dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:ems="10"
                        android:inputType="time"
                        android:textSize="20sp" >
                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/activity_invite_detail_line" >

                    <TextView
                        android:id="@+id/tv_reporttype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="报表部门："
                        android:textColor="@android:color/white"
                        android:textSize="20sp" >
                    </TextView>

                    <Spinner
                        android:id="@+id/report_type"
                        android:layout_width="650dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:textSize="20sp" >
                    </Spinner>
                </LinearLayout>

                <LinearLayout style="@style/activity_invite_detail_line" >

                    <TextView
                        android:id="@+id/tv_reportdata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="报表备注："
                        android:textColor="@android:color/white"
                        android:textSize="20sp" >
                    </TextView>

                    <EditText
                        android:id="@+id/report_neirong"
                        android:layout_width="650dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="top"
                        android:textSize="20sp" >
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:paddingTop="10dip" >

                    <TextView
                        style="@style/activity_meet_detail_title"
                        android:text="附件："
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />

                    <ListView
                        android:id="@+id/file_list"
                        android:layout_width="650dip"
                        android:layout_height="120dip"
                        android:background="@drawable/rounded_edittext"
                        android:cacheColorHint="@android:color/transparent"
                        android:paddingLeft="3dip"
                        android:paddingRight="3dip" >
                    </ListView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/reportfujian_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dip"
                            android:background="@drawable/button_selector"
                            android:text="上传附件"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/reporttj_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="19dp"
                            android:layout_marginTop="5dip"
                            android:background="@drawable/btn_selector"
                            android:text="提交"
                            android:textColor="@android:color/black"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>