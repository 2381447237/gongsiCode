<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
   android:background="#dfdfdf">
 
    <RelativeLayout 
        android:id="@+id/rl_os_all"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="15dp">
           
    <ImageView
        android:id="@+id/iv_os_all_content1" 
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_photo"
        android:paddingLeft="20dp"/>
    <ImageView
        android:id="@+id/iv_os_all_content2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@id/iv_os_all_content1" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_photo"
        android:paddingLeft="10dp"/>
    <ImageView
        android:id="@+id/iv_os_all_content3" 
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@id/iv_os_all_content2" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_photo"
        android:paddingLeft="10dp"/>
        
    <View
        android:layout_below="@id/iv_os_all_content1"
        android:id="@+id/iv_os_all_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"
        />
    
    
    <TextView 
        android:id="@+id/tv_os_all1"
        android:paddingTop="15dp"
       android:paddingLeft="22dp"
        android:layout_below="@id/iv_os_all_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品价格：  ￥"
        />
    
    <TextView 
        android:id="@+id/tv_os_all_price"
        android:paddingTop="15dp"
        android:layout_below="@id/iv_os_all_view"
        android:layout_toRightOf="@id/tv_os_all1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="697.00"
        />
    <TextView 
        android:id="@+id/tv_os_all_state"
        android:paddingTop="15dp"
        android:layout_below="@id/iv_os_all_view"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="交易关闭"
        android:paddingRight="20dp"/>
    
    <TextView 
        android:layout_toLeftOf="@id/tv_os_all_state"
        android:paddingTop="15dp"
        android:layout_below="@id/iv_os_all_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前状态:  "
        />
    
    
    </RelativeLayout>
    
  <View
      android:layout_below="@id/rl_os_all"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#dfdfdf"
        />
    

</RelativeLayout>
