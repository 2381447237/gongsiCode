<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff">
    
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >


        <ImageView 
            android:id="@+id/img_shopcartback"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:text="购物车"
            android:textSize="20sp" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/line" />
	</RelativeLayout>
	
    <LinearLayout 
        android:id="@+id/layout_shopcart"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
       android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:visibility="invisible">
        <ImageView
            android:visibility="invisible"
            android:id="@+id/imageview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/white_logo" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageview1"
             android:layout_gravity="center_horizontal"
            android:text="赶紧登录添加吧~"
            android:textColor="#808080" />

    </LinearLayout>
    <ListView 
        android:id="@+id/listview_shopcart"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="55dp"
        android:layout_width="fill_parent">
        
    </ListView>

    <LinearLayout
        android:id="@+id/linearlayout22"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="￥"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_shopcarttotalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textSize="17sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/identity_selector_btnbg"
            android:gravity="center"
            android:text="结算"
            android:textColor="@drawable/identity_selector_textcolor"
            android:textSize="18sp" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layout_noGoods"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
       android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/imageview_noGoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/white_logo" />

        <TextView
            android:id="@+id/textview_noGoods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
            android:text="购物车是空的，赶紧添加商品吧~"
            android:textColor="#808080" />

    </LinearLayout>
    
</RelativeLayout>
