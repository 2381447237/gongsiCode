<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.base.activity.BounceScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_login"
                android:layout_width="fill_parent"
                android:layout_height="130dp"
                android:background="#A39480" >

                <!-- <ImageView
                    android:id="@+id/img_login"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/denglu" /> -->
                <com.base.activity.RoundImageView
                    android:id="@+id/img_login"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/denglu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_login"
                    android:layout_centerHorizontal="true"
                    android:text="登录"
                    android:textColor="#404040"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_allorder"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/imageview2"
                    android:text="查看全部订单"
                    android:textColor="#bfbfbf" />

                <ImageView
                    android:id="@+id/imageview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/you" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="我的订单"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/dingdan" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#dfdfdf" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_daifukuan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/daifukuan" />

                <ImageView
                    android:id="@+id/iv_daifahuo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/daifahuo" />

                <ImageView
                     android:id="@+id/iv_daipinlun"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:src="@drawable/daipinlun" />

            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#dfdfdf" />
            <RelativeLayout
                android:id="@+id/layout_favorites"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/imageview3"
                    android:text="查看全部收藏"
                    android:textColor="#bfbfbf" />

                <ImageView
                    android:id="@+id/imageview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/you" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="收藏夹"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/shoucangjia" />
            </RelativeLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
            <RelativeLayout
                android:id="@+id/rl_footprint"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/imageview5"
                    android:text="走的再多我们不会忘记"
                    android:textColor="#bfbfbf" />

                <ImageView
                    android:id="@+id/imageview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/you" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/imageView6"
                    android:text="我的足迹"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/zuji" />
            </RelativeLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/imageview7"
                    android:text="您的声音大家在聆听"
                    android:textColor="#bfbfbf" />

                <ImageView
                    android:id="@+id/imageview7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/you" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/imageView8"
                    android:text="我的评论"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/pinlun" />
            </RelativeLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
            <RelativeLayout
                android:id="@+id/rl_baozu"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/imageview11"
                    android:text="选择套餐优惠多多"
                    android:textColor="#bfbfbf" />

                <ImageView
                    android:id="@+id/imageview11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/you" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/imageView12"
                    android:text="包租"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/baozu" />
            </RelativeLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/line" />
            <RelativeLayout
                android:id="@+id/layout_setting"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="6dp"
                    android:layout_toLeftOf="@+id/imageview9"
                    android:text="系统的设置"
                    android:textColor="#bfbfbf" />

                <ImageView
                    android:id="@+id/imageview9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/you" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/imageView10"
                    android:text="设置"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/shezhi" />
            </RelativeLayout>

        </LinearLayout>
    </com.base.activity.BounceScrollView>

</RelativeLayout>