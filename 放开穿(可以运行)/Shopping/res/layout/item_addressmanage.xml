<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    
<TextView 
    android:id="@+id/tv_addressmanage_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="测试的名字"
    android:paddingTop="7dp"
    android:paddingLeft="8dp"
    android:textSize="16sp"/>
<TextView 
    android:id="@+id/tv_addressmanage_phonenumber"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="11111111111"
    android:paddingTop="7dp"
    android:paddingRight="10dp"
    android:layout_alignParentRight="true"/>
    
<TextView 
    android:id="@+id/tv_addressmanage_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="上海-上海市-浦东新区测试测试测试测试测试测试测试测试测试"
    android:singleLine="true"
    android:layout_below="@id/tv_addressmanage_name"
    android:paddingLeft="8dp"
    android:paddingTop="5dp"
    android:textSize="14sp"
    android:textColor="#b8b8b8"/>

<ImageView 
    android:id="@+id/iv_addressmanage_editcheck"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/addressmanage_edituncheck"
    android:paddingLeft="18dp"
    android:paddingTop="10dp"
    android:layout_below="@id/tv_addressmanage_address"
    android:paddingBottom="5dp"/>

<ImageView 
    android:id="@+id/iv_addressmanage_addressedit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/addressmanage_addressedit"
    android:layout_alignParentRight="true"
    android:paddingRight="10dp"
    android:layout_alignBottom="@id/iv_addressmanage_editcheck"
     android:paddingBottom="5dp"/>

<ImageView 
    android:id="@+id/iv_addressmanage_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/addressmanage_delete"
    android:layout_toLeftOf="@id/iv_addressmanage_addressedit"
    android:layout_alignBottom="@id/iv_addressmanage_editcheck"
    android:paddingRight="15dp"
     android:paddingBottom="5dp"/>
</RelativeLayout>
