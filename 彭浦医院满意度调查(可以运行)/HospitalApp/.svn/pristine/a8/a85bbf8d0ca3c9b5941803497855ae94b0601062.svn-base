<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#f4f4f4">
 <View 
      android:id="@+id/view"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#ffcc00"
    android:layout_marginLeft="20dp"
   android:layout_marginRight="20dp"/>
 
 <TextView 
      android:layout_below="@id/view"
      android:id="@+id/tv_prompt"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="请输入您的姓名及电话:"
      android:paddingLeft="20dp"
      android:paddingTop="5dp"
      android:textColor="#a9a9a9"
      android:textSize="19sp"/>
 
        <LinearLayout
            android:layout_below="@id/tv_prompt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="15dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="姓名"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_name_personinfo_nonet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textSize="24sp"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="电话"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/et_phone_personinfo_nonet"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:paddingBottom="5dp"
                    android:singleLine="true"
                    android:textSize="24sp"
                    android:inputType="number|text"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit_personinfo_nonet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/submit_shape"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >
            </LinearLayout>
        </LinearLayout>
  

</RelativeLayout>